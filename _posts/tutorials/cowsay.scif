
# =======================
# fortune
# =======================
%appinstall fortune
    apt-get update && apt-get install -y fortune

%appenv fortune
    BEST_APP=fortune
    export BEST_APP

%apphelp fortune
    fortune is the best app

%apprun fortune
    exec /usr/games/fortune "$@"

